@using Microsoft.AspNetCore.Identity
@using RecipeApplication.Data @*Обновляем пространство имен нашегопроекта, которое содержит ApplicationUser.*@
@*В шаблоне по умолчанию используется IdentityUser. Выполняем обновление, чтобы использовать ApplicationUser*@
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привет, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Manage/Index" asp-route-returnUrl="@Url.Page("/", new { area = " " })" asp-area="Identity" method="post">
                <button class="nav-link btn btn-link text-dark" type="submit">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Логин</a>
        </li>
    }
</ul>